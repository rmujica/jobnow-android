<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/white"
    tools:context="com.wuqi.jobnow.activities.MyProfileActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src = "@drawable/categoria0"
        android:id="@+id/imageView"
        android:layout_toEndOf="@+id/miPerfil"
        android:layout_below="@+id/miPerfil"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"
        android:layout_marginRight="10dp" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/full_name"
        android:layout_marginLeft="31dp"
        android:layout_above="@+id/email"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible"
        android:layout_marginBottom="26dp" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/email"
        android:layout_toStartOf="@+id/imageView"
        android:fontFamily="sans-serif-light"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignLeft="@+id/full_name"
        android:visibility="invisible"
        android:layout_alignStart="@+id/full_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Mis Datos"
        android:textColor="#ff5722"
        android:textSize="30dp"
        android:fontFamily="sans-serif-medium"
        android:id="@+id/miPerfil"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/full_name"
        android:layout_alignStart="@+id/full_name"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp" />

    <ProgressBar android:id="@+id/progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
